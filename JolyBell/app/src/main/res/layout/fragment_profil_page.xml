<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilPageFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prodil_change_currency"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USD"
                android:background="@drawable/item_design_dark"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>


            <TextView
                android:id="@+id/prodil_change_language"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RU"
                android:background="@drawable/item_design_dark"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>

        </LinearLayout>




        <!-- Alert care of the thing -->
        <RelativeLayout
            android:id="@+id/alert_care_of_the_thing"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/alert_fon">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alert_dialog"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Space -->
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/alert_dialog_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="50dp"
                        android:background="@drawable/item_design">

                        <ImageView
                            android:id="@+id/btn_alert_care_of_the_thing_close"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_baseline_close_24" />

                        <!-- Put alert item -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="USD"
                                android:background="@drawable/item_design_dark"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:padding="10dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="USD"
                                android:background="@drawable/item_design_dark"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:padding="10dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <!-- Space -->
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>