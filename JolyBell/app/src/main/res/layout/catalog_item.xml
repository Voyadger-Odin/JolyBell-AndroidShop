<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/catalog_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_design"
        android:orientation="vertical"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/catalog_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 000 RUB"
            android:textStyle="bold"
            android:background="@drawable/cost_item_design"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"/>

        <ImageView
            android:id="@+id/catalog_item_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/item_1"
            android:padding="15dp"
            android:transitionName="itemTransitionImg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:background="@drawable/item_design"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/catalog_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textAlignment="center"
            android:textSize="8pt"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>